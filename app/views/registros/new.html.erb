<h2>Nuevo registro de precio:</h2>

<%= simple_form_for @registro do |f| %>
  <%= f.input :producto, prompt: "Seleccione un producto", require: true, collection: ["Nominee", "Byspirifed", "Grammya","Baikal"] %>

  <%= f.input :ubicacion, prompt: "Seleccione una zona", require: true,collection: ["Antioquia", "Costa", "Cundi/Boyacá","Llanos","Occidente", "Santanderes","Tolima/Huila"] %>

  <%= f.input :nivel, prompt: "Seleecion nivel de venta", require: true, collection: ["Almacén", "Usuario final"] %>

  <%= f.input :negociacion, prompt: "Seleccione tipo de negociacion", require: true, collection: ["De contado", "A crédito"] %>

  <%= f.input :precio %>
  <%= f.button :submit, "Enviar registro" %>
<% end %>
