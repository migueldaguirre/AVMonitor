<h2><%= t(".sign_up") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true,  error: "Por favor verificar" %>
    <%= f.input :email, required: true, autofocus: true, error: "Email inválido (ya existe o no corresponde al formato)" %>
    <%= f.input :password, required: true, error: "Verifique que contenga suficientes caracteres", hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, error: "Verifique la contraseña" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t(".sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
