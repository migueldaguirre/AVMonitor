<%= content_for(:after_js) do %>
<% end %>

<% unless @registro.id.blank? %>
<% end %>


<%= simple_form_for @registro do |f| %>

  <%= f.error_notification %>


<%= f.label :producto_id %><br>
<%= f.hidden_field :producto_id, value: "#{@producto_default}" %>
<%= select_tag :prod_id, options_from_collection_for_select(
      Producto.all.map { |pro| pro }.sort_by { |prosort| prosort.ica },:id, :marca), class: 'select2', as: :select, id: 'prod', include_blank: "#{Producto.find_by_id(@producto_default).marca}", style: "color:red"%>
      <br><br>


<%= f.label :municipio_id %><br>
<%= f.hidden_field :municipio_id, value: "#{@municipio_default}" %>
<%= select_tag :munip_id, options_from_collection_for_select(
      Municipio.all.map { |mun| mun }.sort_by { |munsort| munsort.nombre_municipio },:id, :municipio_departamento), class: 'select2', include_blank: "#{Municipio.find_by_id(@municipio_default).municipio_departamento}", as: :select, id: 'munip' %>

      <br><br>

    <%= f.input :presentacion, prompt: "Seleccione la cantidad de producto", require: true, collection: ["10g", "15g", "20g","50g","75g", "100g", "120g", "125g","150g","200g","250g","375g","400g","500g","750g", "800g","954g","1kg","5kg","10kg","12kg","20kg","25kg","80kg","100kg","500kg","100L", "500L","200L","100L","60L","50L","20L","10L","5L","4L","1L","750ml","500ml","250ml","200ml","150ml", "125ml", "Unidad"] %>


  <%= f.input :nivel, prompt: "Selecione nivel de venta", require: true, collection: ["Almacén", "Usuario final"] %>

  <%= f.input :negociacion,prompt: "Selecione nivel de venta", require: true, collection: ["De contado", "A crédito"] %>

  <%= f.input :precio, placeholder: "No incluir puntos ni símbolos" %>


  <%= hidden_field_tag :usd, @trm_default.dollar %>

  <%= f.input :comentario %>

  <%= f.button :submit, "Enviar registro", style: "background-color:#278F75; width: 100%; margin-bottom:40px; margin-top: 20px; font-weight: regular; color: white" %>


<% end %>








